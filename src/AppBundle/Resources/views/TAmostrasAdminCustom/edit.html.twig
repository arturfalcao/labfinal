<div class="container-fluid new_cal_element">
    <div class="row">
        <div class="large-1 medium-1 columns no-padding" style="position:fixed;border: 1px solid #DFDFDF;height: 100%;z-index: 5;">
            {% include 'default/menu.html.twig' %}
        </div>
        <div class=" large-15 medium-15 columns">
            <div class="row">


                <div class="large-16 medium-16 columns">
                    {% include 'default/topheader_planeamento_edit.html.twig' %}

                </div>
            </div>
            <div class="row linha_branco"><div class="col-md-12">0</div></div>
            <div class="row linha_branco"><div class="col-md-12">0</div></div>
            <div class="row linha_branco"><div class="col-md-12">0</div></div>
            <div class="row linha_branco"><div class="col-md-12">0</div></div>
            <div class="row linha_branco"><div class="col-md-12">0</div></div>
            <div class="row">
                <div class="large-16 medium-16 columns no-padding">

                    {% block body -%}
                        {{ form_start(edit_form) }}
                        <div class="large-6 medium-6 push-1 form-group">
                            {{ form_label(edit_form.fnCliente, 'Cliente') }}
                            {{ form_widget(edit_form.fnCliente) }}
                        </div>

                        <div class="large-6 medium-6 push-1 form-group">
                            {{ form_label(edit_form.ftRefexterna, 'Local de Recolha') }}
                            {{ form_widget(edit_form.ftRefexterna) }}
                        </div>

                        <div class="large-6 medium-6 push-1 form-group">
                            {{ form_label(edit_form.ftGrupoparametros, 'Grupo de Parâmetros') }}
                            {{ form_widget(edit_form.ftGrupoparametros) }}
                        </div>

                        <div class="large-6 medium-6 push-1 form-group">
                            {{ form_label(edit_form.fnProduto, 'Produto') }}
                            {{ form_widget(edit_form.fnProduto) }}
                        </div>

                        <div class="large-3 medium-3 push-1 form-group">
                            {{ form_label(edit_form.startdatetime, 'Data de início') }}
                            {{ form_widget(edit_form.startdatetime) }}
                        </div>

                        <div class="large-3 medium-3 push-1 form-group">
                            {{ form_label(edit_form.enddatetime, 'Data de fim') }}
                            {{ form_widget(edit_form.enddatetime) }}
                        </div>

                        <div class="row linha_branco">0</div>
                        <div class="well well-small text-center">
                                <div class="col-md-2 col-md-offset-4">

                                    {{ form_row(edit_form.submit, { 'label': 'Atualizar',
                                        'attr': {'class': ' btn generateworklist'} }) }}
                                </div>
                                {{ form_end(edit_form) }}

                                <div class="col-md-2">
                                    {{ form_start(delete_form) }}
                                    {{ form_row(delete_form.submit,
                                    { 'label': 'Apagar', 'attr': {'class': ' btn btn-danger'} }) }}

                                    {{ form_end(delete_form) }}
                                </div>
                            </div>

                    {% endblock %}



                </div>


            </div>
        </div>
    </div>
</div>

<script>
    $( document ).ready(function() {
        $("#Novo_Planeamento_submit").prepend('<i style="padding-right: 8px" class="fa fa-save"></i>');
        $("#form_submit").prepend('<i style="padding-right: 8px" class="fa fa-times-circle"></i>');

        var novo_planeamento = $("#Novo_Planeamento_submit");
        var form_submit = $("#form_submit");

        novo_planeamento.removeClass("btn-primary");
        novo_planeamento.removeClass("btn");

        form_submit.removeClass("btn-primary");
        form_submit.removeClass("btn");
        $('#Novo_Planeamento_startdatetime_time').timepicker({ 'timeFormat': 'H:i', 'step': 10 });
        $('#Novo_Planeamento_enddatetime_time').timepicker({ 'timeFormat': 'H:i' , 'step': 10});

        $('#Novo_Planeamento_fnCliente').attr('required',true);
        $('#Novo_Planeamento_ftGrupoparametros').attr('required',true);
        $('#Novo_Planeamento_fnProduto').attr('required',true);

    });
</script>





